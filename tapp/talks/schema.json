{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [ "name", "slug", "first_date", "start_time", "end_time", "location",
    "ical_desc", "web_desc", "web_suggest", "talks", "url", "sponsor" ],
  "properties": {
    "name": { "type": "string" },
    "slug": { "type": "string" },
    "first_date": { "$ref": "#/definitions/isoDate" },
    "start_time": { "$ref": "#/definitions/hmTime" },
    "end_time": { "$ref": "#/definitions/hmTime" },
    "location": { "type": "string" },
    "ical_desc": { "type": "string" },
    "web_desc": { "type": "string" },
    "web_suggest": { "type": "string" },
    "categories": {
      "type": "array",
      "minItems": 0,
      "items": { "type": "string" },
      "uniqueItems": true
    },
    "talks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [ "title", "cat", "desc" ],
        "properties": {
          "title": { "type": "string" },
          "cat": {
            "type": "integer",
            "minimum": 0
           },
          "desc": { "type": "string" },
          "location": { "type": "string" }
        }
      }
    },
    "url": { "$ref": "#/definitions/url" },
    "sponsor": {
      "type": "object",
      "required": [ "name", "url", "desc", "logo", "logo_svg-gen_height_offset" ],
      "properties": {
        "name": { "type": "string" },
        "url": { "$ref": "#/definitions/url" },
        "desc": { "type": "string" },
        "logo": { "$ref": "#/definitions/unixFile" },
        "logo_svg-gen_height_offset": { "type": "integer" }
      }
    }
  },
  "definitions": {
    "isoDate": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-1][0-9]-[0-3][0-9]$"
    },
    "hmTime": {
      "type": "string",
      "pattern": "^[0-2][0-9]:[0-5][0-9]$"
    },
    "url": {
      "type": "string",
      "pattern": "(https?|ftp)://([^\\s/?\\.#-]+\\.?)+(/[^\\s]*)?"
    },
    "unixFile": {
      "type": "string",
      "pattern": "(/[^\\s]+)*[^\\s]*(.[^\\s]*)*.?[^\\s]+"
    }
  }
}
